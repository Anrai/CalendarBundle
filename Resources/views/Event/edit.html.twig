{% extends 'SgCalendarBundle::layout.html.twig' %}
{% form_theme form 'SgCalendarBundle:Form:theme.html.twig' %}

{% block title %}{{ 'calendar.event.action.edit.title'|trans({}, 'messages') }}{% endblock %}

{% block left_header %}

    <h2>{{ 'calendar.event.action.edit.title'|trans({}, 'messages') }}</h2>

    <hr />

{% endblock %}

{% block sidebar %}
{% endblock %}

{% block content %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal well'}, 'action': path('sg_calendar_update_event', { 'id': entity.id }) }) }}

        {% include "SgCalendarBundle:Event:form_content.html.twig" %}

        <div class="form-actions">
            <button formnovalidate="formnovalidate" class="btn btn-primary" type="submit">{{ 'calendar.event.action.edit.submit'|trans({}, 'messages') }}</button>
        </div>
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}
