{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'calendar.calendar.action.get.title'|trans({}, 'messages') }}{% endblock %}

{% block header %}

    <h2>{{ 'calendar.calendar.action.get.title'|trans({}, 'messages') }}</h2>

    <hr />

{% endblock %}

{% block sidebar %}

    {{ render_datepicker() }}

{% endblock %}

{% block content %}

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>EventsUrl</th>
                <td>{{ entity.eventsUrl }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ entity.createdBy }}</td>
            </tr>
            <tr>
                <th>UpdatedBy</th>
                <td>{{ entity.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sg_calendar') }}">
                {{ 'calendar.calendar.action.index.title'|trans({}, 'messages') }}
            </a>
        </li>
        <li>
            <a href="{{ path('sg_calendar_edit_calendar', { 'id': entity.id }) }}">
                {{ 'calendar.calendar.action.edit.title'|trans({}, 'messages') }}
            </a>
        </li>
        <li>
            <a href="{{ path('sg_calendar_remove_calendar', { 'id': entity.id }) }}">
                {{ 'calendar.calendar.action.remove.title'|trans({}, 'messages') }}
            </a>
        </li>
    </ul>

{% endblock %}