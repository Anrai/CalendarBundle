{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'calendar.calendar.action.edit.title'|trans({}, 'messages') }}{% endblock %}

{% block header %}

    <h2>{{ 'calendar.calendar.action.edit.title'|trans({}, 'messages') }}</h2>

    <hr />

{% endblock %}

{% block sidebar %}

    {{ render_datepicker() }}

{% endblock %}

{% block content %}

    {{ form_start(edit_form, {'action': path('sg_calendar_update_calendar', { 'id': entity.id }) }) }}
        {{ form_widget(edit_form) }}
        <p>
            <button formnovalidate="formnovalidate" type="submit">{{ 'calendar.calendar.action.edit.submit'|trans({}, 'messages') }}</button>
        </p>
    {{ form_end(edit_form) }}

{% endblock %}