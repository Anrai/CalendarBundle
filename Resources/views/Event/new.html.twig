{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'sg.calendar.title.event.new'|trans({}, 'CalendarBundle') }}{% endblock %}

{% block content %}

    <h2>{{ 'sg.calendar.title.event.new'|trans({}, 'CalendarBundle') }}</h2>

    <hr />

    {{ form_start(form, {'action': path('sg_calendar_create_event') }) }}
        {{ form_widget(form) }}
        <p>
            <button formnovalidate="formnovalidate" type="submit">{{ 'sg.calendar.event.create'|trans({}, 'CalendarBundle') }}</button>
        </p>
    {{ form_end(form) }}

{% endblock %}