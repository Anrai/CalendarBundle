{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'sg.calendar.title.event.edit'|trans({}, 'CalendarBundle') }}{% endblock %}

{% block content %}

    <h2>{{ 'sg.calendar.title.event.edit'|trans({}, 'CalendarBundle') }}</h2>

    <hr />

    <form action="{{ path('sg_calendar_event_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">{{ 'sg.calendar.event.edit'|trans({}, 'CalendarBundle') }}</button>
        </p>
    </form>

{% endblock %}
