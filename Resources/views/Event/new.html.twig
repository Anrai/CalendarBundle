{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'calendar.event.action.new.title'|trans({}, 'messages') }}{% endblock %}

{% block header %}

    <h2>{{ 'calendar.event.action.new.title'|trans({}, 'messages') }}</h2>

    <hr />

{% endblock %}

{% block sidebar %}

    {{ render_datepicker() }}

{% endblock %}

{% block content %}

    {{ form_start(form, {'action': path('sg_calendar_create_event') }) }}
        {{ form_widget(form) }}
        <p>
            <button formnovalidate="formnovalidate" type="submit">{{ 'calendar.event.action.new.submit'|trans({}, 'messages') }}</button>
        </p>
    {{ form_end(form) }}

{% endblock %}