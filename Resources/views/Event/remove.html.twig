{% extends 'SgCalendarBundle::layout.html.twig' %}

{% block title %}{{ 'calendar.event.action.remove.title'|trans({}, 'messages') }}{% endblock %}

{% block header %}

    <h2>{{ 'calendar.event.action.remove.title'|trans({}, 'messages') }}</h2>

    <hr />

{% endblock %}

{% block sidebar %}
{% endblock %}

{% block content %}

    <table>
        <tbody>
            <tr>
                <th>{{ 'calendar.entity.event.title'|trans({}, 'messages') }}:</th>
                <td>{{ entity.title }}</td>
            </tr>
        </tbody>
    </table>

    {% set confirmMsg = 'calendar.event.action.remove.confirm'|trans({}, 'messages') %}

    {{ form_start(remove_form, {'action': path('sg_calendar_delete_event', { 'id': entity.id }) }) }}
        {{ form_widget(remove_form) }}
        <p>
            <button formnovalidate="formnovalidate" type="submit" onclick="if(!confirm('{{ confirmMsg }}')) { return false; }">
                {{ 'calendar.event.action.remove.submit'|trans({}, 'messages') }}
            </button>
        </p>
    {{ form_end(remove_form) }}

{% endblock %}

